require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('yahoo_weatherman', '1.0.3') do |p|
  p.description    = "A ruby wrapper to the Yahoo! Weather feed with i18n support."
  p.url            = "http://github.com/dlt/yahoo_weatherman"
  p.author         = "Dalto Curvelano Junior"
  p.email          = "daltojr@gmail.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
end